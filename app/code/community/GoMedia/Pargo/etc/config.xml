<?xml version="1.0"?>
<config>
    <modules>
        <GoMedia_Pargo>
            <version>1.0.0</version>
        </GoMedia_Pargo>
    </modules>
    <global>
        <models>
            <gomedia_pargo>
                <class>GoMedia_Pargo_Model</class>
            </gomedia_pargo>
        </models>
        <helpers>
            <pargo>
                <class>GoMedia_Pargo_Helper</class>
            </pargo>
        </helpers>
        <events>
            <sales_order_save_after>
                <observers>
                    <process_order>
                        <type>singleton</type>
                        <class>gomedia_pargo/observer</class>
                        <method>processOrder</method>
                    </process_order>
                </observers>
            </sales_order_save_after>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <switch_address>
                        <type>singleton</type>
                        <class>gomedia_pargo/observer</class>
                        <method>switchAddress</method>
                    </switch_address>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
        </events>
        <resources>
            <gomedia_pargo_setup>
                <setup>
                    <module>GoMedia_Pargo</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
            </gomedia_pargo_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote_address>
                <pup_id>
                    <to_order_address>*</to_order_address>
                </pup_id>
            </sales_convert_quote_address>
        </fieldsets>
    </global>
    <default>
        <carriers>
            <gomedia_pargo>
                <active>0</active>
                <sallowspecific>0</sallowspecific>
                <model>gomedia_pargo/carrier</model>
                <name>Pargo Pickup Point</name>
                <price>50.00</price>
                <title>Pargo Pickup</title>
                <api_url>https://api.pargo.co.za/v7/</api_url>
                <warehouse_code>1</warehouse_code>
                <send_on_status>0</send_on_status>
            </gomedia_pargo>
        </carriers>
    </default>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <gomedia_pargo before="Mage_Checkout">GoMedia_Pargo</gomedia_pargo>
                        <gomedia_pargo before="Mage_Cart">GoMedia_Pargo</gomedia_pargo>
                    </modules>
                </args>
            </checkout>
        </routers>
    </frontend>
</config>